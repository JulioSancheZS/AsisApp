<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
	android:minWidth="300dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<TextView
		android:text="Registrar Alumno"
		android:layout_height="60dp"
		android:layout_width="match_parent"
		android:layout_gravity="center"
		android:gravity="center"
		android:textSize="18sp"
		android:textStyle="bold"
		
	/>

	<View
		android:layout_height="1dp"
		android:layout_width="match_parent"
		android:background="#e2e2e2"
	/>

	<LinearLayout
		android:padding="16dp"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:orientation="vertical">

		<android.support.design.widget.TextInputLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/txtaddNombre"
			>
			<EditText
				android:hint="Nombre"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:textSize="18sp"
				android:imeOptions="actionNext"
			/>

			</android.support.design.widget.TextInputLayout>

		
		<android.support.design.widget.TextInputLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/txtaddApellido"
			>
			<EditText
				android:hint="Apellido"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:textSize="18sp"
				android:imeOptions="actionNext"
			/>

		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/txtaddSexo"
			>
			<EditText
				android:hint="Sexo"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:textSize="18sp"
				android:imeOptions="actionNext"
			/>

		</android.support.design.widget.TextInputLayout>

		
		<android.support.design.widget.TextInputLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/txtaddTelefono"
			>
			<EditText
				android:hint="Telefono"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:textSize="18sp"
				android:imeOptions="actionNext"
			/>

		</android.support.design.widget.TextInputLayout>

			
		<android.support.design.widget.TextInputLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/txtaddEmail"
			>
			<EditText
				android:hint="Email"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:textSize="18sp"
				android:imeOptions="actionNext"
			/>

		</android.support.design.widget.TextInputLayout>

		<fr.ganfra.materialspinner.MaterialSpinner
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/spinnerGrado"
			app:ms_enableFloatingLabel="true"
			app:ms_floatingLabelText="Seleccione Grado"
			app:ms_hint="Seleccione Grado"
			app:ms_alignLabels="true"
		/>

	
		<Button
			android:id="@+id/btnaddAlumno"
			android:layout_height="40dp"
			android:layout_width="300dp"
			android:layout_gravity="center_horizontal"
			android:text="Guardar"
			android:background="?attr/colorPrimary"
			android:textColor="#fff"
			android:layout_marginTop="20dp"
			/>

		</LinearLayout>

</LinearLayout>
